<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="@integer/material_motion_duration_long_1"
        android:background="@color/gray"
        android:gravity="right|center"
        android:textSize="40pt"
        android:inputType="textPersonName"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="acEvent"
                android:text="AC"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="+/-"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/buDivide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="operatorEvent"
                android:text="/"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="operatorEvent"
                android:text="*"
                android:textSize="10pt"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="1"
                android:textSize="10pt"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="2"
                android:textSize="10pt"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="3"
                android:textSize="10pt"
                tools:ignore="TextContrastCheck"></Button>
            <Button
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:text="-"
                android:onClick="operatorEvent"
                android:textSize="10pt"
                android:id="@+id/buMinus"
                android:background="@color/black"
                ></Button>

        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:text="4"
                android:textSize="10pt"
                android:id="@+id/bu4"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:text="5"
                android:id="@+id/bu5"
                android:textSize="10pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:text="6"
                android:id="@+id/bu6"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:text="+"
                android:id="@+id/buPlus"
                android:textSize="10pt"
                android:background="@color/black"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:textSize="10pt"
                android:background="@color/blueback"
                android:text="7"></Button>

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:textSize="10pt"
                android:background="@color/blueback"
                android:text="8"></Button>

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:background="@color/blueback"
                android:text="9"></Button>

            <Button
                android:id="@+id/buPercent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="percentEvent"
                android:layout_weight="1"
                android:textSize="10pt"
                android:background="@color/black"
                android:text="%"></Button>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="46pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="2"
            android:onClick="numberEvent"
            android:background="@color/blueback"
            android:text="0"
            android:textSize="10pt"
            android:textColor="#FFFFFFFF"></Button>

        <Button
            android:id="@+id/buDot"
            android:layout_width="35pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:onClick="numberEvent"
            android:layout_weight="2"
            android:background="@color/blueback"
            android:text="."
            android:textSize="10pt"
            android:textColor="#FFFFFFFF"></Button>

        <Button
            android:id="@+id/buEqual"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            android:onClick="equalEvent"
            android:text="="
            android:textSize="10pt"
            android:textColor="#FFFFFFFF"></Button>
    </LinearLayout>

</LinearLayout>